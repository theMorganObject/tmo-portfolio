{
  "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
  "rules": {
    "quotes": ["error", "single", { "avoidEscape": true }],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "jsxSingleQuote": true,
        "semi": true,
        "endOfLine": "lf"
      }
    ]
  }
}
